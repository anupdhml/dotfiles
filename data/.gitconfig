[user]
  email = anupdhml+git@gmail.com
  name = anupdhml
[color]
  ui = true
[core]
  excludesfile = /home/anup/.gitignore_global
  autocrlf = false
  preloadindex = true
[push]
  default = current
[rerere]
  enabled = true
[pull]
  rebase = true
[alias]
  # basics
  s   = status
  sf  = status -suno
  c   = checkout
  cb  = checkout -b
  d   = diff
  ds  = diff --staged
  a   = add
  p   = pull
  b   = branch
  cm  = commit -m
  cam = commit -a -m
  sh  = show
  # extras
  rs  = reset --soft HEAD~1
  rh  = reset --hard HEAD~1
  g   = grep --break --heading --line-number
  lg  = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
  # for posting to reviewboard
  rb  = "!MERGE_BASE=$(git merge-base origin HEAD); git diff --full-index $MERGE_BASE HEAD"
  rbf = "!MERGE_BASE=$(git merge-base origin HEAD); git diff --name-only --full-index $MERGE_BASE HEAD"
  # checkout branch with fuzzy search for names
  bc  = "!bc() { git checkout $(git branch | fzy -e $1); }; bc"
[grep]
  extendRegexp = true
  lineNumber = true
[fetch]
	prune = true
