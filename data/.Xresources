! geometry
! this value makes urxvt start maximized in my xfce setup
URxvt*geometry: 130x40

! border
URxvt.internalBorder: 1

! perl extensions
URxvt.perl-ext-common: default,matcher,selection-to-clipboard

! open links on mouse left-click
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

! icon file
URxvt*iconFile: /usr/share/icons/elementary-xfce/apps/64/xfce-terminal.png

#############################################

! My Color Scheme

! black
URxvt*color0  : #2E3436
URxvt*color8  : #6C6C6C
!URxvt*color8  : #8EA5A9
!URxvt*color8  : #555753
! red
URxvt*color1  : #CC0000
URxvt*color9  : #EF2929
! green
URxvt*color2  : #4E9A06
URxvt*color10 : #8AE234
! yellow
URxvt*color3  : #C4A000
URxvt*color11 : #FCE94F
! blue
URxvt*color4  : #3465A4
URxvt*color12 : #729FCF
! magenta
URxvt*color5  : #75507B
URxvt*color13 : #AD7FA8
! cyan
URxvt*color6  : #06989A
URxvt*color14 : #34E2E2
! white
!URxvt*color7  : #D3D7CF
URxvt*color7  : #D6D6D6
URxvt*color15 : #EEEEEC
!URxvt*color15 : #FFFFFF

!*background:            S_base3
!*foreground:            S_base00
!*fadeColor:             S_base3
!*cursorColor:           S_base01
!*pointerColorBackground:S_base1
!*pointerColorForeground:S_base01

! background color (prior to tinting) (default is white)
URxvt.background: rgba:f0f0/f0f0/f0f0/eeee
!URxvt*background:	#F0F0F0
! solarized light
!URxvt*background: #fdf6e3
! transparency
!urxvt*depth: 32

! transparency - true or false (default)
!URxvt*transparent:true
!URxvt*inheritPixmap: true

! font color (default is black)
URxvt*foreground:	#323232

#############################################

urxvt*font:           xft:Dejavu Sans Mono:style=Book:size=16:antialias=true:hinting=true,xft:Noto Sans Devanagari
urxvt*Boldfont:       xft:Dejavu Sans Mono:style=Bold:size=16:antialias=true:hinting=true
urxvt*Italicfont:     xft:Dejavu Sans Mono:style=Oblique:size=16:antialias=true:hinting=true
urxvt*boldItalicfont: xft:Dejavu Sans Mono:style=Oblique:size=16:antialias=true:hinting=true

! fix font width
URxvt*letterSpace: -1
!URxvt*lineSpace: -1

# scroll settings #############################################################

! scrollbar appearance
URxvt*scrollBar: false
URxvt*scrollBar_right: true
URxvt*transpscrollbar: true
URxvt*scrollstyle: plain

! scrollback buffer lines
URxvt*saveLines: 50000

! disable scrolback buffer for secondary screen (as used by programs like less)
URxvt.secondaryScreen: true
URxvt.secondaryScroll: false

! do not scroll with output
URxvt*scrollTtyOutput: false

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true

! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true
