! Xft settings ---------------------------------------------------------------

!Xft.dpi:        96
!Xft.antialias:  true
!Xft.rgba:       rgb
!Xft.hinting:    true
!Xft.hintstyle:  hintslight

###############
## For xterm ##
###############

*customization: -color
XTerm*termName:  xterm-256color

###############
## For urxvt ##
###############

! perl extensions
!URxvt.perl-ext-common: default,tabbed,matcher
URxvt.perl-ext-common: default,matcher,clipboard
!URxvt.perl-ext-common: default,tabbed,matcher,clipboard,keyboard-select,url-select
!URxvt.perl-ext-common: default,tabbed,tabbedex,matcher

! URL Launching
URxvt*urlLauncher: google-chrome
URxvt*matcher.button: 1
!URxvt*colorUL: #86a2b

! scrollback buffer lines - 65535 is max (64 is default)
URxvt*saveLines:12000
!URxvt*saveLines:32767

! commands as login shell
URxvt*loginShell:true

! xterm
!urxvt*termName: rxvt-unicode
urxvt*termName: rxvt-unicode-256color
!urxvt*termName: rxvt-256color
!urxvt*termName: xterm

! icon file
URxvt*iconFile: /home/anup/data/image-files/icons/launcher-icons/terminal-faneza.svg

#############################################

! geometry
!URxvt*geometry: 80x40
!tipping point
!URxvt*geometry: 159x45
!URxvt*geometry: 200x50
!choice
URxvt*geometry: 160x46
!
!URxvt*geometry: 160x45

! border
URxvt.internalBorder:   1
!URxvt*borderLess:true 

! scrollbar - true (default) or false
URxvt*scrollBar:false

! scrollbar position - left=false (default) or right=true
URxvt*scrollBar_right:true

! scrollbar style - rxvt (default), plain, next, or xterm
URxvt*scrollstyle:plain
URxvt.secondaryScroll:  true

! transparent scrollbar
URxvt*transpscrollbar:true

! title name
!URxvt.title: Terminal
!URxvt.title: अनुपको टर्मिनल

#############################################

! background color (prior to tinting) (default is white)
!URxvt*background:white
!URxvt*background:	#F0F0F0
urxvt*depth: 32
!URxvt.background: rgba:f000/f000/f000/eeee
URxvt.background: rgba:f0f0/f0f0/f0f0/eeee

! transparency - true or false (default)
!URxvt*transparent:true
!URxvt*inheritPixmap: true

! tint with any color; i.e., blue, red, tomato4, olivedrab2, etc.
!   some nice listings are at:
!     http://www.nisrv.com/modules.php?name=Hex_Colors
!     http://www.htmlgoodies.com/tutorials/colors/article.php/3478921
!URxvt*tintColor:blue
!URxvt*tintColor: white

! shading - 0 to 99 darkens, 101 to 200 lightens.
! Dont use with tintColor; use a darker or lighter color instead.
!URxvt*shading:190

! font color (default is black)
!URxvt*foreground:black
URxvt*foreground:	#323232

