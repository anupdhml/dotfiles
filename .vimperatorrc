" My Vimperator customization file
" vim: ft=vimperator sw=2 sts=2 fdm=marker

" preliminaries                                                             {{{

" load all plugins
loadplugins

" check for other rc files
source! /home/mel/.vimperatorrc.local

" let otions
let mapleader = ","

